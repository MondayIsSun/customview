<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!--1、android View and ViewGroup的测量-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnTeaching"
        android:text="Measure_1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnMeasure"
        android:text="Measure_2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnMyMeasureTextView"
        android:text="MyMeasureTextView" />

    <!--2.1、android 自定义控件 对现有控件进行拓展-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnMyTextView"
        android:text="MyTextView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnShineTextView"
        android:text="ShineTextView" />

    <!--2.2、android 自定义控件 创建复合组件-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnTopBar"
        android:text="TopBar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnMyScrollView"
        android:text="MyScrollView" />

    <!--2.3、android 自定义控件 重写View实现全新控件-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnCircleProgress"
        android:text="CircleProgress" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnCircleImage"
        android:text="CircleImage" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnVolumeView"
        android:text="VolumeView" />

    <!--3、android 事件传递机制-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnDispatchEvent"
        android:text="DispatchEvent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnDispatchMyButton"
        android:text="DispatchMyButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnDispatchMyLinearLayout"
        android:text="DispatchMyLinearLayout" />

</LinearLayout>
